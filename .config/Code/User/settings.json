{
  "editor.fontFamily": "'JetBrainsMono Nerd Font Mono'",
  "editor.fontSize": 18,
  "editor.fontLigatures": true,
  "editor.lineHeight": 24,

  "editor.mouseWheelScrollSensitivity": 2,
  "editor.fastScrollSensitivity": 3,
  "editor.inlineSuggest.enabled": false, // A keybind is configured to show suggestions
  "editor.rulers": [120],

  "chat.agent.enabled": true,

  "diffEditor.ignoreTrimWhitespace": false,

  "workbench.startupEditor": "none",

  "telemetry.telemetryLevel": "off",

  "git.enableSmartCommit": true,
  "scm.workingSets.enabled": true,
  "scm.defaultViewMode": "tree",

  "search.exclude": {
    "**/node_modules": true,
    "**/.flox/**/manifest.lock": true
  },

  "workbench.colorCustomizations": {
    // Make ruler white and transparent
    "editorRuler.foreground": "#FFFFFF25"
  },

  "gitlens.launchpad.indicator.enabled": false,
  "powershell.promptToUpdatePowerShell": false,

  "[yaml]": {
      "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[terraform]": {
    "editor.formatOnSave": true
  }
}
