{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "openai/gpt-5.3-codex",
  "small_model": "openai/gpt-5-nano",
  "autoupdate": false,
  "keybinds": {
    "command_list": "ctrl+alt+p",
  },
  "permission": {
    "edit": "ask",
    "doom_loop": "ask",
    "external_directory": "ask",
    "webfetch": "allow",
    "bash": {
      "*": "ask",

      // "safe" commands
      "cat *": "allow",
      "cp *": "allow",
      "curl *": "allow",
      "find *": "allow",
      "grep *": "allow",
      "jq *": "allow",
      "ls *": "allow",
      "mkdir *": "allow",
      "pwd *": "allow",
      "rg *": "allow",
      "sed *": "allow",
      "tree *": "allow",
      "uname *": "allow",
      "whoami *": "allow",

      "flox *": "allow",

      // Terraform: allow, but never apply changes
      "terraform *": "ask",
      "terraform apply*": "deny",

      // Pulumi: allow, but never apply changes
      "pulumi *": "allow",
      "pulumi up *": "deny",
    },
  },
}
