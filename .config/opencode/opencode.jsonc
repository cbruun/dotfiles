{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "openai/gpt-5.2-codex",
  "small_model": "openai/gpt-5-nano",
  "autoupdate": false,
  "keybinds": {
    "command_list": "ctrl+alt+p",
  },
  "permission": {
    "edit": "ask",
    "doom_loop": "ask",
    "external_directory": "ask",
    "webfetch": "allow",

    "bash": {
      "*": "ask",

      // "safe" commands = auto-allow
      "ls *": "allow",
      "pwd": "allow",
      "find *": "allow",
      "mkdir *": "allow",
      "cp *": "allow",
      "curl *": "allow",
      "cat *": "allow",
      "sed *": "allow",
      "grep *": "allow",
      "tree *": "allow",
      "jq *": "allow",
      "flox *": "allow",

      // Terraform: allow, but never apply
      "terraform *": "ask",
      "terraform apply*": "deny",
    },
  },
}
