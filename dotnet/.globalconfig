is_global = true

# Tabs, Idents, Alignment: https://www.jetbrains.com/help/resharper/EditorConfig_CSHARP_CSharpIndentStylePageSchema.html#Align_multiline_constructs
csharp_align_linq_query = true
csharp_align_multiple_declaration = true
csharp_align_multiline_calls_chain = true
csharp_align_multiline_extends_list = true
csharp_align_multline_type_parameter_constrains = true
csharp_align_multline_type_parameter_list = true
csharp_int_align_switch_expressions = true
csharp_int_align_switch_sections = ture

# Syntax Style: https://www.jetbrains.com/help/resharper/EditorConfig_CSHARP_CSharpCodeStylePageImplSchema.html#Arguments
csharp_braces_for_while = required
csharp_default_internal_modifier = explicit
csharp_default_private_modifier = explicit


# Style Rules
# More examples here: https://github.com/RehanSaeed/EditorConfig/blob/main/.editorconfig

# Language keywords instead of framework type names for type references
dotnet_style_explicit_tuple_names = true:warning
dotnet_style_predefined_type_for_locals_parameters_members = true:error
dotnet_style_predefined_type_for_member_access = true:error
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:warning
dotnet_style_require_accessibility_modifiers = always:error

# C# Style Rules: https://github.com/RehanSaeed/EditorConfig/blob/main/.editorconfig
csharp_style_namespace_declarations = file_scoped:error

csharp_prefer_simple_using_statement = true:suggestion
csharp_prefer_static_local_function = true:warning
